{
    "compilerOptions": {
      "module": "commonjs",
      "declaration": true,
      "removeComments": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "allowSyntheticDefaultImports": true,
      "sourceMap": true,
      "incremental": true,
      "outDir": "dist",
      "baseUrl": ".",
      "target": "ES2020",
      "moduleResolution": "node",
      "allowJs": true,
      "lib": ["ES2020"],
      "skipLibCheck": true,
      "resolveJsonModule": true,
    },
    "exclude": ["node_modules", "dist"]
  }
  